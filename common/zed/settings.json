{
  "vim_mode": true,
  "vim": {
    "highlight_on_yank_duration": 1,
    "use_smartcase_find": true,
    "use_system_clipboard": "always",
    "toggle_relative_line_numbers": true
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark"
  },
  "languages": {
    "TypeScript": {
      "language_servers": ["typescript-language-server", "!vtsls"]
    },
    "TSX": {
      "language_servers": ["typescript-language-server", "!vtsls"]
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server", "!vtsls"]
    }
  },
  "cursor_blink": false,
  "scrollbar": {
    "show": "never",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "default_dock_anchor": "right",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": false,
    "git_status": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "format_on_save": "on",
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "soft_wrap": "editor_width",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "on", // better indication of focus
    "copy_on_select": false,
    "dock": "bottom",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "font_family": "JetBrainsMono Nerd Font Mono",
    "font_size": 16,
    "line_height": "comfortable",
    "option_as_meta": true,
    "button": false,
    "toolbar": {
      "title": false
    },
    "working_directory": "current_project_directory"
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "always"
    }
  },
  "assistant": {
    "enabled": false,
    "button": false,
    "dock": "bottom",
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  }
}
